{
  "files": [],
  "extends": "../../tsconfig.compiler-options.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "my-addon": ["../../packages/my-addon/addon"],
      "my-addon/*": ["../../packages/my-addon/addon/*"],
      "my-addon/test-support": ["../../packages/my-addon/addon-test-support"],
      "my-addon/test-support/*": ["../../packages/my-addon/addon-test-support/*"],
      
      "ts-interface": ["./app"],
      "ts-interface/*": ["./app/*"],
      "ts-interface/tests/*": ["./tests/*"]
    }
  },
  "include": [
    "types/",
    "app/",
    "tests/"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
